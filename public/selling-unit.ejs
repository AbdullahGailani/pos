<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Selling</title>
    <link rel="stylesheet" href="./style/selling-unit.css" />
  </head>
  <body>
    <div class="sell-desc hidden">
      <div class="sell-container container">
        <form action="/selling-unit" method="POST">
          <div class="selling-unit-header">
            <h1>12/ may / 2024</h1>
            <h1>Sell Unit</h1>
          </div>
          <div class="list-item">
            <div>
              <p>Barcode</p>
              <input class="input1" type="text" name="barcode" />
            </div>
            <div>
              <p>Medicin Name</p>
              <input class="input2" type="text" name="name" />
            </div>
            <div>
              <p>Type</p>
              <input class="input3" type="text" name="type" />
            </div>
            <div>
              <button class="btn5">-</button>
            </div>
            <div>
              <p>How Many</p>
              <input class="input4" type="text" name="quty" />
            </div>
            <div>
              <button class="btn6">+</button>
            </div>
            <div>
              <p>Price</p>
              <input class="input5" type="text" name="price" />
            </div>
            <div>
              <p>Expiration Date</p>
              <input class="input7" type="text" name="expirationDate" />
            </div>
            <div>
              <button class="btn7" type="submit">#</button>
            </div>
            <div>
              <button class="btn8 reset-items">&</button>
            </div>
          </div>
        </form>
      </div>

      <div class="item-selling-container">
        <% for (const item of items) { %>

        <div class="item">
          <h3><%= item.name %></h3>
          <h3><%= item.price %></h3>
          <h3><%= item.barcode %></h3>
          <h3><%= item.quty %></h3>
          <h3><%= item.expirationDate %></h3>
        </div>

        <% } %>
      </div>
    </div>
  </body>
</html>
